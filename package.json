{
  "name": "@sudobility/consumables_service",
  "version": "0.0.2",
  "description": "Shared backend library for consumable credits management with Drizzle ORM",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.esm.json",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "verify": "bun run typecheck && bun run lint && bun run test && bun run build",
    "prepublishOnly": "bun run clean && bun run verify"
  },
  "files": [
    "dist/**/*",
    "CLAUDE.md"
  ],
  "keywords": [
    "consumables",
    "credits",
    "revenuecat",
    "in-app-purchase",
    "drizzle"
  ],
  "author": "Sudobility",
  "license": "BUSL-1.1",
  "peerDependencies": {
    "@sudobility/types": "^1.9.51",
    "drizzle-orm": ">=0.44.0"
  },
  "devDependencies": {
    "@sudobility/types": "^1.9.51",
    "drizzle-orm": "^0.45.1",
    "vitest": "^4.0.4",
    "@types/bun": "latest",
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^9.39.0",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.7.0",
    "typescript": "^5.9.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
